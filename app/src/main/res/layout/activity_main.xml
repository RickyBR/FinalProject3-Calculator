<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="right"
        android:textSize="80dp"
        android:inputType="number"
        android:textColor="#fff"
        android:background="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color2"
                android:text="AC"
                android:textColor="#0F0F0F"
                />

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color2"
                android:text="+/-"
                android:textColor="#0F0F0F"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color2"
                android:text="%"
                android:textColor="#0F0F0F"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:text="/"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="7"

                />

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="8"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="9"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:text="X"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="4"
                />

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="5"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="6"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="1"
                />

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="2"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="3"/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="0"
                />

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:text="."/>

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:background="@drawable/bg_btn_color3"
                android:drawableStart="@drawable/ic_baseline_backspace_24"
                android:paddingStart="25dp"

                />

            <androidx.appcompat.widget.AppCompatButton style="@style/main_button"
                android:text="="/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>